@model Bio
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Facebook" style="margin-top: -23px;font-size: 16px;color:black;">Title:</label>
                    <textarea asp-for="Facebook" class="form-control" style="font-size: 21px;"></textarea>
                    <span asp-validation-for="Facebook" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-top:55px">
                    <label asp-for="Twitter" style="margin-top: -23px;font-size: 16px;color:black;">Description:</label>
                    <textarea asp-for="Twitter" class="form-control" style="font-size: 21px;"></textarea>
                    <span asp-validation-for="Twitter" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Instagram" style="margin-top: -23px;font-size: 16px;color:black;">Title:</label>
                    <textarea asp-for="Instagram" class="form-control" style="font-size: 21px;"></textarea>
                    <span asp-validation-for="Instagram" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-top:55px">
                    <label asp-for="Youtube" style="margin-top: -23px;font-size: 16px;color:black;">Description:</label>
                    <textarea asp-for="Youtube" class="form-control" style="font-size: 21px;"></textarea>
                    <span asp-validation-for="Youtube" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-info" value="Create" />
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index"><i class="fas fa-arrow-left"></i> Go Back</a>
        </div>
    </div>
</div>


