@model Category
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name" style="margin-top: -23px;font-size: 16px;color:black;">Name:</label>
                    <textarea asp-for="Name" class="form-control" style="font-size: 21px;"></textarea>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-info" value="Create" />
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index"><i class="fas fa-arrow-left"></i> Go Back</a>
        </div>
    </div>
</div>
<script src="https://cdn.ckeditor.com/ckeditor5/15.0.0/classic/ckeditor.js"></script>
<script>
        ClassicEditor
            .create(document.querySelector('#Name'))
            .catch(error => {
                console.error(error);
        });
</script>


